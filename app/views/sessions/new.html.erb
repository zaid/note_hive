<h2>Sign in</h2>

<%= form_tag sessions_path do %>
  <div class='field'>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class='field'>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class='actions'><%= submit_tag 'Log in' %></div>
<% end %>
<p><br /> New user? <%= link_to 'Sign up', signup_path %></p>
